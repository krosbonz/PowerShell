{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachines_win2k16_vm_name": {
            "defaultValue": "win2k16-vm",
            "type": "String"
        },
        "networkInterfaces_win2k16_vm31_externalid": {
            "defaultValue": "/subscriptions/fb0a14a6-d68a-4594-94d9-8950a5a7030e/resourceGroups/mytechrg/providers/Microsoft.Network/networkInterfaces/win2k16-vm31",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[parameters('virtualMachines_win2k16_vm_name')]",
            "location": "eastus",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[parameters('virtualMachines_win2k16_vm_name')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https://mytechsg.blob.core.windows.net/vhds/', parameters('virtualMachines_win2k16_vm_name'), '20200416160015.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "diskSizeGB": 127
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachines_win2k16_vm_name')]",
                    "adminUsername": "godwire",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true,
                    "requireGuestProvisionSignal": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('networkInterfaces_win2k16_vm31_externalid')]"
                        }
                    ]
                }
            }
        }
    ]
}